{
  "parser"  : "babel-eslint",
  "extends" : [
    "airbnb"
  ],
  "plugins" : [
    "flow-vars"
  ],
  "env"     : {
    "browser" : true
  },
  "globals": {
    "Action": false,
    "DEVELOPMENT": false,
    "PRODUCTION": false,
    "__DEBUG__": false,
    "sinon": false,
    "expect": false,
    "assert": false
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 140, 2],
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "arrow-body-style": [1, "as-needed"],
    "no-use-before-define": 0
  }
}
